---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found | Rakesh Roshan">
    <div class="error-page h-screen flex items-center justify-center relative overflow-hidden error-bg">
        <div class="absolute top-[10%] -left-[15%] w-[500px] h-[500px] rounded-full animate-float-bg bg-float-1"></div>
        <div class="absolute bottom-[20%] -right-[10%] w-[600px] h-[600px] rounded-full animate-float-bg-reverse bg-float-2"></div>
        <div class="error-content text-center px-4 relative z-10 max-h-screen flex flex-col justify-center">
            <h1 class="error-code text-[80px] sm:text-[150px] lg:text-[200px] font-black mb-2 sm:mb-4 gradient-text-404">404</h1>
            <h2 class="error-title text-xl sm:text-3xl lg:text-4xl font-bold text-white mb-2 sm:mb-4">Oops! Page Not Found</h2>

            <p class="error-message text-sm sm:text-lg text-white/80 mb-4 sm:mb-8 max-w-md mx-auto px-2">The page you're looking for seems to have wandered off into the digital void. Let's get you back on track!</p>

            <div class="error-actions flex gap-3 sm:gap-4 justify-center flex-wrap mb-4 sm:mb-0">
                <a href="/" class="btn-primary btn-glass-blue px-4 sm:px-6 py-2 sm:py-3 font-bold text-white rounded-full transition-all duration-400 relative overflow-hidden flex items-center gap-2 text-sm sm:text-base">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="sm:w-5 sm:h-5">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    Go Home
                </a>
                <a href="/#contact" class="btn-secondary btn-glass-purple px-4 sm:px-6 py-2 sm:py-3 font-bold text-white rounded-full transition-all duration-400 relative overflow-hidden flex items-center gap-2 text-sm sm:text-base">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="sm:w-5 sm:h-5">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    Contact Me
                </a>
            </div>

            <div class="error-illustration mt-4 sm:mt-12">
                <div class="floating-emoji text-4xl sm:text-6xl lg:text-8xl animate-bounce">ðŸš€</div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .error-bg {
        background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
    }

    .bg-float-1 {
        background: radial-gradient(circle, rgba(59, 130, 246, 0.12) 0%, transparent 70%);
    }

    .bg-float-2 {
        background: radial-gradient(circle, rgba(217, 70, 239, 0.12) 0%, transparent 70%);
    }

    .gradient-text-404 {
        background: var(--gradient2);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        filter: drop-shadow(0 0 30px rgba(217, 70, 239, 0.6));
    }

    .btn-glass-blue {
        background: rgba(59, 130, 246, 0.2);
        backdrop-filter: blur(25px);
        border: 2px solid rgba(59, 130, 246, 0.5);
        box-shadow: 0 8px 32px rgba(59, 130, 246, 0.4);
    }

    .btn-glass-purple {
        background: rgba(217, 70, 239, 0.2);
        backdrop-filter: blur(25px);
        border: 2px solid rgba(217, 70, 239, 0.5);
        box-shadow: 0 8px 32px rgba(217, 70, 239, 0.4);
    }

    @keyframes float-bg {
        0%,
        100% {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(50px, 50px);
        }
    }

    @keyframes float-bg-reverse {
        0%,
        100% {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(-50px, -50px);
        }
    }

    .animate-float-bg {
        animation: float-bg 20s ease-in-out infinite;
    }

    .animate-float-bg-reverse {
        animation: float-bg-reverse 25s ease-in-out infinite;
    }

    .error-code {
        animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    .btn-primary,
    .btn-secondary {
        position: relative;
        z-index: 1;
    }

    .btn-primary::before,
    .btn-secondary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        transition: left 0.5s ease;
        z-index: -1;
    }

    .btn-primary::before {
        background: var(--gradient3);
    }

    .btn-secondary::before {
        background: var(--gradient2);
    }

    .btn-primary:hover::before,
    .btn-secondary:hover::before {
        left: 0;
    }

    .btn-primary:hover,
    .btn-secondary:hover {
        transform: translateY(-3px) scale(1.05);
    }

    .btn-primary:hover {
        box-shadow: 0 12px 40px rgba(59, 130, 246, 0.6);
    }

    .btn-secondary:hover {
        box-shadow: 0 12px 40px rgba(217, 70, 239, 0.6);
    }

    .floating-emoji {
        display: inline-block;
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(10deg);
        }
    }

    @media (max-width: 768px) {
        .animate-float-bg,
        .animate-float-bg-reverse {
            animation: none !important;
        }

        .error-code {
            animation: none !important;
        }

        .floating-emoji {
            animation: none !important;
        }

        .btn-glass-blue,
        .btn-glass-purple {
            backdrop-filter: none !important;
            -webkit-backdrop-filter: none !important;
        }
    }

    @media (max-width: 640px) {
        .error-page {
            height: 100vh;
            height: 100dvh;
        }

        .error-content {
            max-height: 100vh;
            max-height: 100dvh;
            padding: 1rem 0.5rem;
            gap: 0.5rem;
        }

        .bg-float-1,
        .bg-float-2 {
            opacity: 0.5;
        }

        .error-actions {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }

        .error-actions a {
            min-width: 140px;
            justify-content: center;
        }
    }

    @media (max-width: 375px) {
        .error-content {
            padding: 0.5rem 0.25rem;
        }

        .error-code {
            font-size: 70px !important;
            margin-bottom: 0.5rem !important;
        }

        .error-title {
            font-size: 1.25rem !important;
            margin-bottom: 0.5rem !important;
        }

        .error-message {
            font-size: 0.875rem !important;
            margin-bottom: 1rem !important;
        }

        .floating-emoji {
            font-size: 2.5rem !important;
        }

        .error-illustration {
            margin-top: 1rem !important;
        }
    }
</style>