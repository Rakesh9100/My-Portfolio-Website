---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found | Rakesh Roshan">
  <div class="error-page min-h-screen flex items-center justify-center relative overflow-hidden" style="background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);">
    <!-- Floating Background -->
    <div class="absolute top-[10%] -left-[15%] w-[500px] h-[500px] rounded-full animate-float-bg" style="background: radial-gradient(circle, rgba(59, 130, 246, 0.12) 0%, transparent 70%);"></div>
    <div class="absolute bottom-[20%] -right-[10%] w-[600px] h-[600px] rounded-full animate-float-bg-reverse" style="background: radial-gradient(circle, rgba(217, 70, 239, 0.12) 0%, transparent 70%);"></div>
    
    <div class="error-content text-center px-4 relative z-10">
      <h1 class="error-code text-[120px] sm:text-[150px] lg:text-[200px] font-black mb-4" style="background: var(--gradient2); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; filter: drop-shadow(0 0 30px rgba(217, 70, 239, 0.6));">404</h1>
      
      <h2 class="error-title text-2xl sm:text-3xl lg:text-4xl font-bold text-white mb-4">Oops! Page Not Found</h2>
      
      <p class="error-message text-base sm:text-lg text-white/80 mb-8 max-w-md mx-auto">The page you're looking for seems to have wandered off into the digital void. Let's get you back on track!</p>
      
      <div class="error-actions flex gap-4 justify-center flex-wrap">
        <a href="/" class="btn-primary px-6 py-3 font-bold text-white rounded-full transition-all duration-400 relative overflow-hidden flex items-center gap-2" style="background: rgba(59, 130, 246, 0.2); backdrop-filter: blur(25px); border: 2px solid rgba(59, 130, 246, 0.5); box-shadow: 0 8px 32px rgba(59, 130, 246, 0.4);">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Go Home
        </a>
        
        <a href="/#contact" class="btn-secondary px-6 py-3 font-bold text-white rounded-full transition-all duration-400 relative overflow-hidden flex items-center gap-2" style="background: rgba(217, 70, 239, 0.2); backdrop-filter: blur(25px); border: 2px solid rgba(217, 70, 239, 0.5); box-shadow: 0 8px 32px rgba(217, 70, 239, 0.4);">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          Contact Me
        </a>
      </div>
      
      <!-- Animated 404 Illustration -->
      <div class="error-illustration mt-12">
        <div class="floating-emoji text-6xl sm:text-7xl lg:text-8xl animate-bounce">ðŸš€</div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes float-bg {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(50px, 50px); }
  }
  
  @keyframes float-bg-reverse {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-50px, -50px); }
  }
  
  .animate-float-bg { animation: float-bg 20s ease-in-out infinite; }
  .animate-float-bg-reverse { animation: float-bg-reverse 25s ease-in-out infinite; }
  
  .error-code {
    animation: pulse 2s ease-in-out infinite;
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  
  .btn-primary::before,
  .btn-secondary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    transition: left 0.5s ease;
    z-index: -1;
  }
  
  .btn-primary::before {
    background: var(--gradient3);
  }
  
  .btn-secondary::before {
    background: var(--gradient2);
  }
  
  .btn-primary:hover::before,
  .btn-secondary:hover::before {
    left: 0;
  }
  
  .btn-primary:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 12px 40px rgba(59, 130, 246, 0.6);
  }
  
  .btn-secondary:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 12px 40px rgba(217, 70, 239, 0.6);
  }
  
  .floating-emoji {
    display: inline-block;
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(10deg); }
  }
</style>
