---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found | Rakesh Roshan">
    <div class="error-page h-screen flex items-center justify-center relative overflow-hidden error-bg">
        <div class="error-content text-center px-4 relative z-10 max-h-screen flex flex-col justify-center">
            <h1 class="error-code text-[80px] sm:text-[150px] lg:text-[200px] font-black mb-2 sm:mb-4 gradient-text-404">404</h1>
            <h2 class="error-title text-xl sm:text-3xl lg:text-4xl font-bold text-white mb-2 sm:mb-4">Oops! Page Not Found</h2>

            <p class="error-message text-sm sm:text-lg text-white/80 mb-4 sm:mb-8 max-w-md mx-auto px-2">The page you're looking for seems to have wandered off into the digital void. Let's get you back on track!</p>

            <div class="error-actions flex gap-3 sm:gap-4 justify-center flex-wrap mb-4 sm:mb-0">
                <a href="/" class="btn-primary btn-glass-blue px-4 sm:px-6 py-2 sm:py-3 font-bold text-white rounded-full transition-all duration-400 relative overflow-hidden flex items-center gap-2 text-sm sm:text-base">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="sm:w-5 sm:h-5">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    Go Home
                </a>
                <a href="/#contact" class="btn-secondary btn-glass-green px-4 sm:px-6 py-2 sm:py-3 font-bold text-white rounded-full transition-all duration-400 relative overflow-hidden flex items-center gap-2 text-sm sm:text-base">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="sm:w-5 sm:h-5">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    Contact Me
                </a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .error-bg {
        background: linear-gradient(180deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
    }

    .gradient-text-404 {
        background: var(--gradient1);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-glass-blue {
        background: rgba(59, 130, 246, 0.2);
        border: 2px solid rgba(59, 130, 246, 0.5);
    }

    .btn-glass-green {
        background: rgba(113, 178, 128, 0.2);
        border: 2px solid rgba(113, 178, 128, 0.5);
    }

    @keyframes pulse {
        0%,
        100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    .error-code {
        animation: pulse 2s ease-in-out infinite;
    }

    .btn-primary,
    .btn-secondary {
        position: relative;
        z-index: 1;
    }

    .btn-primary::before,
    .btn-secondary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        transition: left 0.5s ease;
        z-index: -1;
    }

    .btn-primary::before {
        background: var(--gradient2);
    }

    .btn-secondary::before {
        background: var(--gradient1);
    }

    .btn-primary:hover::before,
    .btn-secondary:hover::before {
        left: 0;
    }

    .btn-primary:hover,
    .btn-secondary:hover {
        transform: translateY(-3px) scale(1.05);
    }

    @media (max-width: 640px) {
        .error-page {
            height: 100vh;
            height: 100dvh;
        }

        .error-content {
            max-height: 100vh;
            max-height: 100dvh;
            padding: 1rem 0.5rem;
            gap: 0.5rem;
        }

        .error-actions {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }

        .error-actions a {
            min-width: 140px;
            justify-content: center;
        }
    }
</style>