        border: 1px solid var(--hover);
        box-shadow: 0 0 10px var(--hover);
        transition: background 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    }

    @media (max-width: 768px) {
        .scroll-to-top {
            width: 50px;
            height: 50px;
            right: 8px;
            bottom: 15px;
        }

        .progress-content {
            width: 45px;
            height: 45px;
        }

        .progress-content svg {
            width: 20px;
            height: 20px;
        }

        .progress-percentage {
