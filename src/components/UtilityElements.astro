<style is:global>
    /* Line Progress Bar */
    #scroll-progress-line {
        backdrop-filter: blur(50px);
        -webkit-backdrop-filter: blur(50px);
    }

    .progress-line-fill {
        transition: none;
        will-change: width;
    }

    /* Scroll To Top Button */
    .scroll-to-top.show {
        display: block;
        opacity: 1;
    }

    .scroll-to-top:hover {
        transform: translateY(-5px) scale(1.05);
    }

    .progress-content {
        position: relative;
        overflow: hidden;
    }

    .progress-content::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: inherit;
        background: linear-gradient(135deg, var(--primary), var(--hover));
        opacity: 0.2;
        z-index: -1;
        transition: opacity 0.3s ease;
    }

    .scroll-to-top:hover .progress-content {
        background: rgba(0,0,0,0.85);
        border-color: rgba(255,255,255,0.6);
        box-shadow: 0 12px 40px rgba(0,0,0,0.6), 0 0 25px var(--primary);
    }

    .scroll-to-top:hover .progress-content::before {
