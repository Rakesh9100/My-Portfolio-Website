<!-- Line Progress Bar -->
<div id="scroll-progress-line" class="fixed top-0 left-0 w-full h-1 z-[9999]">
    <div class="progress-line-fill h-full transition-all duration-300 bg-gradient-to-r from-[var(--primary)] to-[var(--ternary)]"></div>
</div>

<!-- Scroll To Top Button -->
<div id="progress" class="scroll-to-top fixed right-[25px] bottom-[25px] w-[50px] h-[50px] cursor-pointer z-[9998] opacity-0 hidden transition-all duration-500">
    <div id="progress-value" class="progress-content w-full h-full rounded-full flex flex-col items-center justify-center gap-[2px] transition-all duration-300 bg-[rgba(0,0,0,0.7)] backdrop-blur-xl border-2 border-[rgba(255,255,255,0.4)] shadow-[0_8px_32px_rgba(0,0,0,0.5)] before:absolute before:inset-0 before:rounded-full before:bg-gradient-to-br before:from-[var(--primary)] before:to-[var(--hover)] before:opacity-30 before:z-[-1]">
