<!-- Performance Metrics Display -->
<div class="performance-metrics fixed bottom-[85px] right-[25px] z-[9997]" id="performance-metrics">
    <button class="perf-toggle w-[50px] h-[50px] rounded-full cursor-pointer flex items-center justify-center transition-all duration-300 bg-[rgba(0,0,0,0.7)] backdrop-blur-xl border-2 border-[rgba(255,255,255,0.4)] shadow-[0_8px_32px_rgba(0,0,0,0.5)] relative before:absolute before:inset-0 before:rounded-full before:bg-gradient-to-br before:from-[var(--primary)] before:to-[var(--hover)] before:opacity-30 before:z-[-1]" id="perf-toggle" aria-label="Toggle Performance Metrics">
