<style is:global>
/* Footer Section - Remaining Custom Styles */
.footer-section h4::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 35px;
    height: 2px;
    background: var(--gradient2);
    border-radius: 2px;
}

.social-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--gradient2);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
}

.social-link:hover::before {
    opacity: 1;
}

.social-link:hover {
    transform: translateY(-5px) scale(1.1);
    border-color: var(--hover);
    color: white;
    box-shadow: 0 10px 30px rgba(16, 185, 129, 0.5);
}

.footer-links a::before {
    content: '‚Üí';
    position: absolute;
    left: -20px;
    opacity: 0;
    transition: all 0.3s ease;
    color: var(--hover);
}

.footer-links a:hover::before {
    left: -15px;
    opacity: 1;
}

.footer-links a:hover {
    color: var(--hover);
    transform: translateX(5px);
}

.footer-cta:hover {
    transform: translateY(-3px);
    background: var(--gradient2);
    color: white;
    box-shadow: 0 10px 30px rgba(16, 185, 129, 0.6);
}

.footer-bottom a:hover {
    color: var(--primary);
    text-decoration: underline;
}

/* Responsive Styles */

/* Mobile Styles (<= 640px) */
@media (max-width: 640px) {
    footer {
        padding-top: 2.5rem;
    }

    .footer-content {
        padding: 0 15px 20px;
        grid-template-columns: 1fr;
        gap: 25px;
    }

    .footer-section {
        text-align: center;
    }

    .footer-title {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .footer-tagline {
        font-size: 12px;
        margin-bottom: 12px;
    }

    .footer-social {
        justify-content: center;
        margin-top: 12px;
        gap: 10px;
    }

    .social-link {
        width: 38px;
        height: 38px;
    }

    .social-link svg {
        width: 20px;
        height: 20px;
    }

    .footer-section h4 {
        font-size: 15px;
        margin-bottom: 12px;
        padding-bottom: 8px;
    }

    .footer-section h4::after {
        left: 50%;
        transform: translateX(-50%);
        width: 30px;
    }

    .footer-links {
        text-align: center;
    }

    .footer-links li {
        margin-bottom: 8px;
    }

    .footer-links a {
        font-size: 13px;
    }

    .footer-links a::before {
        display: none;
    }

    .footer-links a:hover {
        transform: translateX(0);
    }

    .footer-info {
        font-size: 12px;
        margin-bottom: 12px;
    }

    .footer-cta {
        padding: 9px 22px;
        font-size: 12px;
    }

    .footer-bottom {
        padding: 15px 15px;
    }

    .footer-bottom p {
        font-size: 12px;
        margin: 5px 0;
    }

    .easter-egg-hint {
        margin-top: 20px;
        font-size: 13px;
        flex-direction: column;
        gap: 5px;
    }

    .easter-egg-hint span:first-child {
        font-size: 18px;
    }
}

/* Tablet Styles (640px - 1023px) */
@media (min-width: 640px) and (max-width: 1023px) {
    footer {
        padding-top: 2.75rem;
    }

    .footer-content {
        padding: 0 30px 22px;
        grid-template-columns: repeat(2, 1fr);
        gap: 28px;
    }

    .footer-section {
        text-align: center;
    }

    .footer-section:first-child {
        grid-column: 1 / -1;
    }

    .footer-section:last-child {
        grid-column: 1 / -1;
    }

    .footer-social {
        justify-content: center;
    }

    .footer-title {
        font-size: 1.75rem;
    }

    .footer-tagline {
        font-size: 12.5px;
    }

    .footer-social {
        gap: 11px;
        margin-top: 13px;
    }

    .social-link {
        width: 40px;
        height: 40px;
    }

    .social-link svg {
        width: 22px;
        height: 22px;
    }

    .footer-section h4 {
        font-size: 15.5px;
        margin-bottom: 13px;
        padding-bottom: 8px;
    }

    .footer-section h4::after {
        left: 50%;
        transform: translateX(-50%);
    }

    .footer-links {
        text-align: center;
    }

    .footer-links a {
        font-size: 13.5px;
    }

    .footer-links a::before {
        display: none;
    }

    .footer-links a:hover {
        transform: translateX(0);
    }

    .footer-info {
        font-size: 12.5px;
        margin-bottom: 13px;
    }

    .footer-cta {
        padding: 9.5px 23px;
        font-size: 12.5px;
    }

    .footer-bottom {
        padding: 16px 30px;
    }

    .footer-bottom p {
        font-size: 12.5px;
    }

    .easter-egg-hint {
        margin-top: 22px;
        font-size: 13.5px;
    }

    .easter-egg-hint span:first-child {
        font-size: 19px;
    }
}

/* Medium Laptop Styles (1024px - 1200px) */
@media (min-width: 1024px) and (max-width: 1200px) {
    .footer-content {
        padding: 0 40px 23px;
        gap: 25px;
    }

    .footer-title {
        font-size: 1.875rem;
    }

    .social-link {
        width: 40px;
        height: 40px;
    }

    .social-link svg {
        width: 22px;
        height: 22px;
    }

    .footer-section h4 {
        font-size: 15.5px;
    }

    .footer-links a {
        font-size: 13.5px;
    }

    .footer-info {
        font-size: 12.5px;
    }

    .footer-cta {
        padding: 9.5px 23px;
        font-size: 12.5px;
    }

    .footer-bottom {
        padding: 17px 40px;
    }

    .footer-bottom p {
        font-size: 12.5px;
    }
}

/* Desktop Styles (1200px+) */
@media (min-width: 1200px) {
    .footer-content {
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    }
}
</style>

