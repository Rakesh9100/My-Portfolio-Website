import c2023_5 from '../assets/images/certificates/2023/JWOC Project Mentor (Mar,2023).jpg';
import c2023_6 from '../assets/images/certificates/2023/GCCP Pathway Campaign (Feb,2023).jpg';
import c2023_7 from '../assets/images/certificates/2023/JPMC Virtual Software Engineering (Jan,2023).jpg';

import c2022_1 from '../assets/images/certificates/2022/HSOC Project Maintainer (Sep,2022).jpg';
import c2022_2 from '../assets/images/certificates/2022/HSOC Top Contributor (Sep,2022).jpg';
import c2022_3 from '../assets/images/certificates/2022/GSSOC LOR (July,2022).jpg';
import c2022_4 from '../assets/images/certificates/2022/GSSOC Top Contributor (July,2022).jpg';
import c2022_5 from '../assets/images/certificates/2022/Google IT Automation (Apr,2022).jpg';

const certificates = [
    { image: c2025_1, title: "Generative AI Leader", date: "Oct, 2025" },
    { image: c2025_2, title: "SWOC Project Admin", date: "Mar, 2025" },
    { image: c2025_3, title: "IWOC Project Maintainer", date: "Mar, 2025" },

    { image: c2024_1, title: "KWOC Project Mentor", date: "Dec, 2024" },
    { image: c2024_2, title: "GSSOC Project Admin", date: "Aug, 2024" },
    { image: c2024_3, title: "JWOC Project Mentor", date: "Mar, 2024" },

    { image: c2023_1, title: "SLOP Project Mentor", date: "Dec, 2023" },
    { image: c2023_2, title: "GSSOC Project Admin", date: "Aug, 2023" },
    { image: c2023_3, title: "GSSOC Project Mentor", date: "Aug, 2023" },
    { image: c2023_4, title: "Natural Language Processing", date: "Apr, 2023" },
    { image: c2023_5, title: "JWOC Project Mentor", date: "Mar, 2023" },
    { image: c2023_6, title: "GCCP Pathway Campaign", date: "Feb, 2023" },
    { image: c2023_7, title: "JPMC Virtual Software Engineering", date: "Jan, 2023" },

    { image: c2022_1, title: "HSOC Project Maintainer", date: "Sep, 2022" },
    { image: c2022_2, title: "HSOC Top Contributor", date: "Sep, 2022" },
    { image: c2022_3, title: "GSSOC Letter of Recommendation", date: "June, 2022" },
    { image: c2022_4, title: "GSSOC Top Contributor", date: "June, 2022" },
    { image: c2022_5, title: "Google IT Automation with Python", date: "Apr, 2022" }
];
---

<section class="certificates section-common section-bg-secondary" id="certificates">
    <!-- Hidden optimized images for Astro build optimization -->
    <div style="display: none;" id="optimized-images">
        {certificates.map((cert, index) => (
            <Image src={cert.image} alt={cert.title} width={600} height={600} loading="lazy" data-cert-index={index} class="optimized-cert-image" />
        ))}
    </div>

    <div class="title relative text-center font-bold mb-4 md:mb-6">
        <span class="section-title text-[8vw] sm:text-[6vw] md:text-[5vw] lg:text-[3.5vw] uppercase">My Certifications</span>
    </div>

    <div class="text text-center mb-8 md:mb-12 lg:mb-16 px-4">
        <span class="quote-text">Certifications validate learning, but impact is measured by real-world execution.</span>
    </div>

    <!-- Certification Controls -->
    <div class="certificate-controls">
        <div class="certificate-search-wrapper">
            <div class="search-input-container">
                <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <input type="text" id="certificate-search" class="certificate-search" placeholder="Search certifications...">
            </div>
            <span class="certificate-count" id="certificate-count">{certificates.length} certifications</span>
        </div>
        <div class="certificate-filters" id="certificate-filters">
            <button class="cert-filter-btn active" data-year="all">All Years</button>
            <button class="cert-filter-btn" data-year="2025">2025</button>
            <button class="cert-filter-btn" data-year="2024">2024</button>
            <button class="cert-filter-btn" data-year="2023">2023</button>
            <button class="cert-filter-btn" data-year="2022">2022</button>
        </div>
    </div>

    <div class="certificate-boxes" id="certificate-boxes">
        <!-- Certifications will be loaded here dynamically -->
    </div>

    <!-- Template for certification boxes (hidden, used for cloning with proper scoped classes) -->
    <div class="certificate-template" style="display: none;">
        <div class="box">
            <div class="cert-image-wrapper">
                <img src="" alt="" loading="lazy" width="600" height="600">
                <div class="cert-overlay">
                    <button class="cert-overlay-btn view-cert">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                        View
                    </button>
                </div>
                <span class="cert-badge"></span>
            </div>
            <div class="topic"></div>
            <div class="topic1"></div>
        </div>
    </div>

    <!-- Load More Button -->
    <div class="cert-load-more-container" id="cert-load-more-container">
        <button class="cert-load-more-btn" id="cert-load-more-btn">
            <span>Load More Certifications</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
        </button>
    </div>
</section>

<!-- Certification Modal -->
<div class="certificate-modal" id="certificate-modal">
    <div class="modal-backdrop" id="modal-backdrop"></div>
    <div class="modal-content">
        <button class="modal-close" id="modal-close" aria-label="Close certification modal" title="Close">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
        <img id="modal-image" src="" alt="Certification" />
        <div class="modal-info">
            <h3 id="modal-title"></h3>
            <p id="modal-date"></p>
        </div>
    </div>
</div>

<style>
    .certificate-controls {
        display: flex;
        flex-direction: column;
        gap: 20px;
        padding: 0 100px;
        margin-top: 40px;
        align-items: center;
    }

    .box {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 20px;
        text-align: center;
        padding: 14px 10px;
        transition: transform 0.3s ease;
        position: relative;
        overflow: hidden;
        min-width: 200px;
        width: fit-content;
    }

    .box:hover {
        background: var(--hover);
        transform: translateY(-3px);
    }

    .box:hover .topic1 {
        background-clip: text;
        background: var(--secondary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .cert-image-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        margin-bottom: 12px;
    }

    .box img {
        width: auto;
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 12px;
        display: block;
        margin: 0 auto;
    }

    .cert-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        opacity: 0;
        border-radius: 12px;
        transition: opacity 0.3s ease;
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
    }

    .box:hover .cert-overlay {
        opacity: 1;
    }

    .cert-overlay-btn {
        padding: 10px 15px;
        background: var(--ternary);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.3s ease;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .cert-overlay-btn:hover {
        transform: scale(1.05);
    }

    .cert-badge {
        position: absolute;
        top: 5px;
        right: 5px;
        padding: 5px 10px;
        background: var(--gradient1);
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        color: white;
        text-transform: uppercase;
        z-index: 2;
    }

    .topic {
        width: 180px;
        color: var(--secondary);
        font-size: 1.1vw;
        font-weight: bold;
        margin: 0 auto 5px auto;
    }

    .topic1 {
        width: 180px;
        background: var(--gradient1);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1vw;
        font-weight: bold;
        margin: 0 auto 5px auto;
    }

    .certificate-template {
        display: none;
    }

    .certificate-search-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        width: 100%;
    }

    .search-input-container {
        position: relative;
        flex: 1;
        max-width: 500px;
        display: flex;
        align-items: center;
    }

    .search-icon {
        position: absolute;
        left: 18px;
        color: var(--hover);
        pointer-events: none;
        stroke-width: 2.5;
        z-index: 1;
    }

    .certificate-search {
        width: 100%;
        padding: 15px 20px 15px 50px;
        background: rgba(0, 0, 0, 0.4);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        font-size: 16px;
        outline: none;
        transition: border-color 0.3s ease;
    }

    .certificate-search::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .certificate-search:focus {
        border-color: var(--hover);
        background: rgba(0, 0, 0, 0.6);
    }

    .certificate-count {
        padding: 10px 25px;
        background: var(--gradient1);
        border-radius: 50px;
        color: white;
        font-weight: 600;
        font-size: 14px;
        white-space: nowrap;
    }

    .certificate-filters {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .cert-filter-btn {
        padding: 8px 28px;
        background: rgba(0, 0, 0, 0.5);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        color: white;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.4s ease, border 0.4s ease;
        touch-action: manipulation;
        position: relative;
        z-index: 1;
    }

    .cert-filter-btn:hover,
    .cert-filter-btn:focus {
        background: rgba(0, 0, 0, 0.6);
        border: 2px solid var(--ternary);
        outline: none;
    }

    .cert-filter-btn.active {
        background: var(--gradient1);
        border: 2px solid transparent;
        color: white;
    }

    .certificate-boxes {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        justify-content: center;
        padding: 0px 100px 25px;
        column-gap: 25px;
        row-gap: 45px;
        margin-top: 40px;
    }

    .cert-load-more-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 40px 0 20px;
    }

    .cert-load-more-btn {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 14px 32px;
        background: var(--hover);
        border-radius: 50px;
        color: var(--secondary);
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        border: 2px solid transparent;
        transition: border-color 0.3s ease, transform 0.3s ease;
    }

    .cert-load-more-btn:hover {
        border-color: var(--secondary);
        transform: scale(1.02);
    }

    .cert-load-more-btn svg {
        transition: transform 0.3s ease;
    }

    .certificate-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10000;
        display: none;
        align-items: center;
        justify-content: center;
    }

    .certificate-modal.active {
        display: flex;
    }

    .modal-backdrop {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
    }

    .modal-content {
        position: relative;
        max-width: 90%;
        max-height: 90%;
        background: rgba(0, 0, 0, 0.9);
        border-radius: 20px;
        padding: 20px;
        border: 2px solid var(--hover);
    }

    .modal-close {
        position: absolute;
        top: 15px;
        right: 15px;
        width: 45px;
        height: 45px;
        background: rgba(0, 0, 0, 0.7);
        border: 2px solid rgba(255, 255, 255, 0.8);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
        z-index: 10;
        border: 2px solid var(--hover);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .modal-close:hover {
        background-color: var(--primary);
        transform: scale(1.1);
    }

    .modal-close svg {
        stroke: white;
        stroke-width: 2.5;
    }

    .modal-content img {
        max-width: 100%;
        max-height: 70vh;
        border-radius: 12px;
        display: block;
        margin: 0 auto;
        user-select: none;
        -webkit-user-drag: none;
    }

    .modal-info {
        text-align: center;
        margin-top: 20px;
    }

    .modal-info h3 {
        color: var(--secondary);
        font-size: 24px;
        margin-bottom: 10px;
    }

    .modal-info p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 16px;
    }

    @media (max-width: 1024px) {
        .certificate-controls {
            padding: 0 30px;
            margin-top: 35px;
        }

        .search-input-container {
            max-width: 400px;
        }

        .certificate-search {
            padding: 13px 18px 13px 48px;
            font-size: 15px;
        }

        .cert-filter-btn {
            padding: 9px 22px;
            font-size: 14px;
        }

        .certificate-boxes {
            padding: 0 30px 22px;
            gap: 35px;
        }

        .box img {
            height: 200px;
        }

        .topic {
            width: 220px;
            font-size: 18px;
        }

        .topic1 {
            width: 220px;
            font-size: 14px;
        }

        .cert-load-more-btn {
            padding: 11px 25px;
            font-size: 15px;
        }
    }

    @media (max-width: 640px) {
        .certificates {
            padding: 4rem 3rem 3rem;
        }

        .certificate-controls {
            padding: 0 15px;
        }

        .certificate-search-wrapper {
            flex-direction: column;
        }

        .search-input-container {
            width: 80vw;
        }

        .certificate-search {
            font-size: 14px;
        }

        .search-icon {
            left: 15px;
        }

        .certificate-count {
            padding: 8px 20px;
            font-size: 13px;
        }

        .certificate-filters {
            gap: 10px;
            padding: 10px 0;
        }

        .box {
            padding: 12px 8px;
        }

        .box img {
            height: auto;
            width: 100%;
            min-width: 100%;
        }

        .cert-load-more-container {
            margin: 30px 0 15px;
        }

        .cert-load-more-btn {
            font-size: 14px;
            gap: 8px;
        }

        .modal-content img {
            max-height: 60vh;
        }

        .modal-info h3 {
            font-size: 18px;
        }
    }
</style>

<script is:inline define:vars={{ certificates }}>
    (function () {
        // Load certifications data from locally defined array
        let allCertificatesOriginal = certificates;
        let filteredCertificates = certificates;
        let currentCertIndex = 0;
        const certsPerLoad = 6;

        function loadCertificates() {
            try {
                loadMoreCertificates();
                updateCertificateCount(certificates.length);
                initCertLoadMore();
                initCertificateFilters();
                initCertificateSearch();
                initCertificateModal();
            } catch (error) {
                console.error('Error loading certifications:', error);
            }
        }

        function loadMoreCertificates() {
            const certificateBoxes = document.getElementById('certificate-boxes');
            const template = document.querySelector('.certificate-template');
            const endIndex = Math.min(currentCertIndex + certsPerLoad, filteredCertificates.length);

            for (let i = currentCertIndex; i < endIndex; i++) {
                const certificate = filteredCertificates[i];

                // Clone the template to get properly scoped classes
                const boxContainer = template.cloneNode(true);
                boxContainer.style.display = 'block';
                boxContainer.classList.remove('certificate-template');
                boxContainer.style.animationDelay = (i - currentCertIndex) * 0.05 + 's';

                const box = boxContainer.querySelector('.box');
                const img = boxContainer.querySelector('img');
                const topic = boxContainer.querySelector('.topic');
                const topic1 = boxContainer.querySelector('.topic1');
                const badge = boxContainer.querySelector('.cert-badge');
                const viewBtn = boxContainer.querySelector('.view-cert');

                const year = certificate.date.match(/\d{4}/)?.[0] || '';

                let category = 'Certification';
                if (certificate.title.includes('Admin')) category = 'Admin';
                else if (certificate.title.includes('Mentor')) category = 'Mentor';
                else if (certificate.title.includes('Maintainer')) category = 'Maintainer';
                else if (certificate.title.includes('Contributor')) category = 'Contributor';
                else if (certificate.title.includes('Internship') || certificate.title.includes('LOR')) category = 'Professional';
                else if (certificate.title.includes('Course') || certificate.title.includes('Learning')) category = 'Course';

                // Find the corresponding optimized image
                const certIndex = allCertificatesOriginal.findIndex(cert => cert.title === certificate.title);
                const optimizedImg = document.querySelector(`[data-cert-index="${certIndex}"]`);
                const imageSrc = optimizedImg ? optimizedImg.src : (typeof certificate.image === 'string' ? certificate.image : certificate.image.src);

                // Update the cloned elements
                img.src = imageSrc;
                img.alt = certificate.title;
                topic.textContent = certificate.title;
                topic1.textContent = '(' + certificate.date + ')';
                badge.textContent = category;

                // Set data attributes for the view button
                viewBtn.dataset.image = imageSrc;
                viewBtn.dataset.title = certificate.title;
                viewBtn.dataset.date = certificate.date;

                // Set data attributes for filtering
                boxContainer.dataset.year = year;
                boxContainer.dataset.title = certificate.title.toLowerCase();

                certificateBoxes.appendChild(boxContainer);
            }

            currentCertIndex = endIndex;

            const loadMoreContainer = document.getElementById('cert-load-more-container');
            if (currentCertIndex >= filteredCertificates.length) {
                loadMoreContainer.style.display = 'none';
            } else {
                loadMoreContainer.style.display = 'flex';
            }

            document.querySelectorAll('.view-cert').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.stopPropagation();
                    openCertificateModal(
                        btn.dataset.image,
                        btn.dataset.title,
                        btn.dataset.date
                    );
                });
            });
        }

        function initCertLoadMore() {
            const loadMoreBtn = document.getElementById('cert-load-more-btn');
            if (loadMoreBtn) {
                loadMoreBtn.addEventListener('click', function () {
                    loadMoreCertificates();
                });
            }
        }

        function displayCertificates(certificates) {
            const certificateBoxes = document.getElementById('certificate-boxes');
            certificateBoxes.innerHTML = '';
            currentCertIndex = 0;
            filteredCertificates = certificates;
            loadMoreCertificates();
        }

        function updateCertificateCount(count) {
            const countElement = document.getElementById('certificate-count');
            if (countElement) {
                countElement.textContent = count + ' certificate' + (count !== 1 ? 's' : '');
            }
        }

        function initCertificateFilters() {
            const certFilterBtns = document.querySelectorAll('.cert-filter-btn');
            certFilterBtns.forEach(function (btn) {
                // Handle both click and touch events
                const handleFilterClick = function (e) {
                    e.preventDefault();
                    e.stopPropagation();

                    certFilterBtns.forEach(function (b) {
                        b.classList.remove('active');
                    });
                    btn.classList.add('active');

                    const year = btn.dataset.year;
                    filterCertificates(year);
                };

                btn.addEventListener('click', handleFilterClick);
                btn.addEventListener('touchend', handleFilterClick);

                // Prevent double-tap zoom on mobile
                btn.addEventListener('touchstart', function (e) {
                    e.preventDefault();
                });
            });
        }

        function filterCertificates(year) {
            const searchTerm = document.getElementById('certificate-search')?.value.toLowerCase() || '';
            let filtered = allCertificatesOriginal;

            if (year !== 'all') {
                filtered = filtered.filter(function (cert) {
                    return cert.date.includes(year);
                });
            }

            if (searchTerm) {
                filtered = filtered.filter(function (cert) {
                    return cert.title.toLowerCase().includes(searchTerm) ||
                        cert.date.toLowerCase().includes(searchTerm);
                });
            }

            displayCertificates(filtered);
            updateCertificateCount(filtered.length);
        }

        function initCertificateSearch() {
            const certSearch = document.getElementById('certificate-search');
            if (certSearch) {
                certSearch.addEventListener('input', function () {
                    const activeFilter = document.querySelector('.cert-filter-btn.active');
                    const year = activeFilter ? activeFilter.dataset.year : 'all';
                    filterCertificates(year);
                });
            }
        }

        function openCertificateModal(image, title, date) {
            const modal = document.getElementById('certificate-modal');
            const modalImage = document.getElementById('modal-image');
            const modalTitle = document.getElementById('modal-title');
            const modalDate = document.getElementById('modal-date');

            modalImage.src = image;
            modalTitle.textContent = title;
            modalDate.textContent = date;
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeCertificateModal() {
            const modal = document.getElementById('certificate-modal');
            modal.classList.remove('active');
            document.body.style.overflow = '';
        }

        function initCertificateModal() {
            const modalClose = document.getElementById('modal-close');
            const modalBackdrop = document.getElementById('modal-backdrop');

            if (modalClose) {
                modalClose.addEventListener('click', closeCertificateModal);
            }

            if (modalBackdrop) {
                modalBackdrop.addEventListener('click', closeCertificateModal);
            }

            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape') {
                    closeCertificateModal();
                }
            });
        }

