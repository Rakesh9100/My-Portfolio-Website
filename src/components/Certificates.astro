---
// Import JSON at build time to avoid runtime fetch
import certificatesDataImport from '../../public/assets/jsons/certificates.json';
const certificatesDataJSON = JSON.stringify(certificatesDataImport);
---

<!-- Inject certificates data at build time -->
<script is:inline set:html={`window.__CERTIFICATES_DATA__ = ${certificatesDataJSON};`}></script>

<section class="certificates z-[3] h-full min-h-screen relative overflow-hidden py-24 px-5 pb-20" id="certificates" style="background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);">
    <!-- Floating Background -->
    <div class="absolute top-[10%] -left-[15%] w-[500px] h-[500px] rounded-full animate-float-bg" style="background: radial-gradient(circle, rgba(59, 130, 246, 0.12) 0%, transparent 70%);"></div>
    <div class="absolute bottom-[20%] -right-[10%] w-[600px] h-[600px] rounded-full animate-float-bg-reverse" style="background: radial-gradient(circle, rgba(217, 70, 239, 0.12) 0%, transparent 70%);"></div>

    <div class="title relative text-center font-bold mb-6">
        <span class="certificates-title uppercase" style="background: var(--gradient2); background-size: cover; color: transparent; background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; filter: drop-shadow(0 0 20px rgba(240, 147, 251, 0.5)); animation: titleGlow 3s ease-in-out infinite;">My Certificates</span>
    </div>

    <div class="text text-center mb-16">
        <span class="certificates-subtitle px-4 py-1 inline-block text-center" style="color: var(--secondary); background: rgba(26, 15, 62, 0.3); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); border: 1px solid rgba(59, 130, 246, 0.4); border-radius: 25px; box-shadow: 0 8px 32px rgba(59, 130, 246, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);">Earning a certificate or degree, or both, after high school opens the door to countless economic opportunities.</span>
    </div>

    <!-- Certificate Controls -->
    <div class="certificate-controls flex flex-col gap-5 px-[100px] mt-10 items-center">
        <div class="certificate-search-wrapper flex items-center justify-center gap-4 w-full">
            <div class="search-input-container relative flex-1 max-w-[500px] flex items-center">
                <svg class="search-icon absolute left-[18px] pointer-events-none z-[1]" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" style="color: var(--hover); stroke-width: 2.5; filter: drop-shadow(0 0 5px rgba(16, 185, 129, 0.5));">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <input type="text" id="certificate-search" class="certificate-search w-full py-[15px] px-5 pl-[50px] rounded-full text-white text-base outline-none transition-all duration-300" placeholder="Search certificates..." style="background: rgba(26, 15, 62, 0.4); backdrop-filter: blur(20px); border: 2px solid rgba(16, 185, 129, 0.3);">
            </div>
            <span class="certificate-count py-2.5 px-6 rounded-full text-white font-semibold text-sm whitespace-nowrap" id="certificate-count" style="background: var(--gradient2); box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);">30 certificates</span>
        </div>
        <div class="certificate-filters flex gap-3 flex-wrap justify-center" id="certificate-filters">
            <button class="cert-filter-btn active py-2 px-7 rounded-full text-white text-[15px] font-semibold cursor-pointer relative transition-all duration-400" data-year="all">All Years</button>
            <button class="cert-filter-btn py-2 px-7 rounded-full text-white text-[15px] font-semibold cursor-pointer relative transition-all duration-400" data-year="2025">2025</button>
            <button class="cert-filter-btn py-2 px-7 rounded-full text-white text-[15px] font-semibold cursor-pointer relative transition-all duration-400" data-year="2024">2024</button>
            <button class="cert-filter-btn py-2 px-7 rounded-full text-white text-[15px] font-semibold cursor-pointer relative transition-all duration-400" data-year="2023">2023</button>
            <button class="cert-filter-btn py-2 px-7 rounded-full text-white text-[15px] font-semibold cursor-pointer relative transition-all duration-400" data-year="2022">2022</button>
            <button class="cert-filter-btn py-2 px-7 rounded-full text-white text-[15px] font-semibold cursor-pointer relative transition-all duration-400" data-year="2021">2021</button>
            <button class="cert-filter-btn py-2 px-7 rounded-full text-white text-[15px] font-semibold cursor-pointer relative transition-all duration-400" data-year="2020">2020</button>
        </div>
    </div>

    <div class="certificate-boxes flex flex-wrap items-start justify-center px-[100px] pb-[25px] gap-x-[25px] gap-y-[45px] mt-10" id="certificate-boxes">
        <!-- Certificates will be loaded here dynamically -->
    </div>

    <!-- Load More Button -->
    <div class="cert-load-more-container" id="cert-load-more-container">
        <button class="cert-load-more-btn" id="cert-load-more-btn">
            <span>Load More Certificates</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
        </button>
    </div>
</section>

<!-- Certificate Modal -->
<div class="certificate-modal" id="certificate-modal">
    <div class="modal-backdrop" id="modal-backdrop"></div>
    <div class="modal-content">
        <button class="modal-close" id="modal-close">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
        <img id="modal-image" src="" alt="Certificate">
        <div class="modal-info">
            <h3 id="modal-title"></h3>
            <p id="modal-date"></p>
        </div>
    </div>
</div>

<style is:global>
    @keyframes titleGlow {
        0%,
        100% {
            filter: drop-shadow(0 0 20px rgba(240, 147, 251, 0.5));
        }

        50% {
            filter: drop-shadow(0 0 30px rgba(240, 147, 251, 0.8));
        }
    }

    @keyframes float-bg {
        0%,
        100% {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(50px, 50px);
        }
    }

    @keyframes float-bg-reverse {
        0%,
        100% {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(-50px, -50px);
        }
    }

    .animate-float-bg {
        animation: float-bg 20s ease-in-out infinite;
    }

    .animate-float-bg-reverse {
        animation: float-bg-reverse 25s ease-in-out infinite;
    }

