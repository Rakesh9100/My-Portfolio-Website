<script define:vars={{ certificates }}>
    (function () {
        // Load certificates data from locally defined array
        let allCertificatesOriginal = certificates;
        let filteredCertificates = certificates;
        let currentCertIndex = 0;
        const certsPerLoad = 6;

        function loadCertificates() {
            try {
                loadMoreCertificates();
                updateCertificateCount(certificates.length);
                initCertLoadMore();
                initCertificateFilters();
                initCertificateSearch();
                initCertificateModal();
            } catch (error) {
                console.error('Error loading certificates:', error);
            }
        }

        function loadMoreCertificates() {
            const certificateBoxes = document.getElementById('certificate-boxes');
            const endIndex = Math.min(currentCertIndex + certsPerLoad, filteredCertificates.length);

            for (let i = currentCertIndex; i < endIndex; i++) {
                const certificate = filteredCertificates[i];
                const box = document.createElement('div');
                box.classList.add('box');
                box.style.animationDelay = (i - currentCertIndex) * 0.05 + 's';

                const year = certificate.date.match(/\d{4}/)?.[0] || '';

                let category = 'Certificate';
                if (certificate.title.includes('Admin')) category = 'Admin';
                else if (certificate.title.includes('Mentor')) category = 'Mentor';
                else if (certificate.title.includes('Maintainer')) category = 'Maintainer';
                else if (certificate.title.includes('Contributor')) category = 'Contributor';
                else if (certificate.title.includes('Internship') || certificate.title.includes('LOR')) category = 'Professional';
                else if (certificate.title.includes('Course') || certificate.title.includes('Learning')) category = 'Course';

                // Find the corresponding optimized image
                const certIndex = allCertificatesOriginal.findIndex(cert => cert.title === certificate.title);
                const optimizedImg = document.querySelector(`[data-cert-index="${certIndex}"]`);
                const imageSrc = optimizedImg ? optimizedImg.src : (typeof certificate.image === 'string' ? certificate.image : certificate.image.src);

                box.innerHTML = '<div class="cert-image-wrapper">' +
                    '<img src="' + imageSrc + '" loading="lazy" width="600" height="600" alt="' + certificate.title + '">' +
                    '<div class="cert-overlay">' +
                    '<button class="cert-overlay-btn view-cert" data-image="' + imageSrc + '" data-title="' + certificate.title + '" data-date="' + certificate.date + '">' +
                    '<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">' +
                    '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>' +
                    '<circle cx="12" cy="12" r="3"></circle>' +
                    '</svg>' +
                    'View' +
                    '</button>' +
                    '</div>' +
                    '<span class="cert-badge">' + category + '</span>' +
                    '</div>' +
                    '<div class="topic">' + certificate.title + '</div>' +
                    '<div class="topic1">(' + certificate.date + ')</div>';

                box.dataset.year = year;
                box.dataset.title = certificate.title.toLowerCase();
                certificateBoxes.appendChild(box);
            }

            currentCertIndex = endIndex;

            const loadMoreContainer = document.getElementById('cert-load-more-container');
            if (currentCertIndex >= filteredCertificates.length) {
                loadMoreContainer.style.display = 'none';
            } else {
                loadMoreContainer.style.display = 'flex';
            }

            document.querySelectorAll('.view-cert').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.stopPropagation();
                    openCertificateModal(
                        btn.dataset.image,
                        btn.dataset.title,
                        btn.dataset.date
                    );
                });
            });

            document.querySelectorAll('.certificates .box').forEach(function (box) {
                box.addEventListener('click', function () {
                    const viewBtn = box.querySelector('.view-cert');
                    if (viewBtn) {
                        openCertificateModal(
                            viewBtn.dataset.image,
                            viewBtn.dataset.title,
                            viewBtn.dataset.date
                        );
                    }
                });
            });
        }

        function initCertLoadMore() {
            const loadMoreBtn = document.getElementById('cert-load-more-btn');
            if (loadMoreBtn) {
                loadMoreBtn.addEventListener('click', function () {
                    loadMoreCertificates();
                });
            }
        }

        function displayCertificates(certificates) {
            const certificateBoxes = document.getElementById('certificate-boxes');
            certificateBoxes.innerHTML = '';
            currentCertIndex = 0;
            filteredCertificates = certificates;
            loadMoreCertificates();
        }

        function updateCertificateCount(count) {
            const countElement = document.getElementById('certificate-count');
            if (countElement) {
                countElement.textContent = count + ' certificate' + (count !== 1 ? 's' : '');
            }
        }

        function initCertificateFilters() {
            const certFilterBtns = document.querySelectorAll('.cert-filter-btn');
            certFilterBtns.forEach(function (btn) {
                // Handle both click and touch events
                const handleFilterClick = function (e) {
                    e.preventDefault();
                    e.stopPropagation();

                    certFilterBtns.forEach(function (b) {
                        b.classList.remove('active');
                    });
                    btn.classList.add('active');

                    const year = btn.dataset.year;
                    filterCertificates(year);
                };

                btn.addEventListener('click', handleFilterClick);
                btn.addEventListener('touchend', handleFilterClick);

                // Prevent double-tap zoom on mobile
                btn.addEventListener('touchstart', function (e) {
                    e.preventDefault();
                });
            });
        }

        function filterCertificates(year) {
            const searchTerm = document.getElementById('certificate-search')?.value.toLowerCase() || '';
            let filtered = allCertificatesOriginal;

            if (year !== 'all') {
                filtered = filtered.filter(function (cert) {
                    return cert.date.includes(year);
                });
            }

            if (searchTerm) {
                filtered = filtered.filter(function (cert) {
                    return cert.title.toLowerCase().includes(searchTerm) ||
                        cert.date.toLowerCase().includes(searchTerm);
                });
            }

            displayCertificates(filtered);
            updateCertificateCount(filtered.length);
        }

        function initCertificateSearch() {
            const certSearch = document.getElementById('certificate-search');
            if (certSearch) {
                certSearch.addEventListener('input', function () {
                    const activeFilter = document.querySelector('.cert-filter-btn.active');
                    const year = activeFilter ? activeFilter.dataset.year : 'all';
                    filterCertificates(year);
                });
            }
        }

        function openCertificateModal(image, title, date) {
            const modal = document.getElementById('certificate-modal');
            const modalImage = document.getElementById('modal-image');
            const modalTitle = document.getElementById('modal-title');
            const modalDate = document.getElementById('modal-date');

            modalImage.src = image;
            modalTitle.textContent = title;
            modalDate.textContent = date;
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeCertificateModal() {
            const modal = document.getElementById('certificate-modal');
            modal.classList.remove('active');
            document.body.style.overflow = '';
        }

        function initCertificateModal() {
            const modalClose = document.getElementById('modal-close');
            const modalBackdrop = document.getElementById('modal-backdrop');

            if (modalClose) {
                modalClose.addEventListener('click', closeCertificateModal);
            }

            if (modalBackdrop) {
                modalBackdrop.addEventListener('click', closeCertificateModal);
            }

            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape') {
                    closeCertificateModal();
                }
            });
        }

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', loadCertificates);
        } else {
            loadCertificates();
        }
    })();
</script>