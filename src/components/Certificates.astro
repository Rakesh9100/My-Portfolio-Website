---

<section class="certificates z-[3] h-full min-h-screen relative overflow-hidden py-24 px-5 pb-20" id="certificates" style="background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);">
    <!-- Floating Background -->
    <div class="floating-bg floating-bg-1"></div>
    <div class="floating-bg floating-bg-2"></div>

    <!-- Hidden optimized images for Astro build optimization -->
    <div style="display: none;" id="optimized-images">
        {certificates.map((cert, index) => (
            <Image src={cert.image} alt={cert.title} width={600} height={600} loading="lazy" data-cert-index={index} class="optimized-cert-image" />
        ))}
    </div>

    <div class="title relative text-center font-bold mb-6">
        <span class="certificates-title uppercase">My Certificates</span>
    </div>

    <div class="text text-center mb-16">
        <span class="certificates-subtitle px-4 py-1 inline-block text-center">Earning a certificate or degree, or both, after high school opens the door to countless economic opportunities.</span>
    </div>

    <!-- Certificate Controls -->
    <div class="certificate-controls">
        <div class="certificate-search-wrapper">
            <div class="search-input-container">
                <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <input type="text" id="certificate-search" class="certificate-search" placeholder="Search certificates...">
            </div>
            <span class="certificate-count" id="certificate-count">{certificates.length} certificates</span>
        </div>
        <div class="certificate-filters" id="certificate-filters">
            <button class="cert-filter-btn active" data-year="all">All Years</button>
            <button class="cert-filter-btn" data-year="2025">2025</button>
            <button class="cert-filter-btn" data-year="2024">2024</button>
            <button class="cert-filter-btn" data-year="2023">2023</button>
            <button class="cert-filter-btn" data-year="2022">2022</button>
            <button class="cert-filter-btn" data-year="2021">2021</button>
            <button class="cert-filter-btn" data-year="2020">2020</button>
        </div>
    </div>

    <div class="certificate-boxes" id="certificate-boxes">
        <!-- Certificates will be loaded here dynamically -->
    </div>

    <!-- Load More Button -->
    <div class="cert-load-more-container" id="cert-load-more-container">
        <button class="cert-load-more-btn" id="cert-load-more-btn">
            <span>Load More Certificates</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
        </button>
    </div>
</section>

<!-- Certificate Modal -->
<div class="certificate-modal" id="certificate-modal">
    <div class="modal-backdrop" id="modal-backdrop"></div>
    <div class="modal-content">
        <button class="modal-close" id="modal-close" aria-label="Close certificate modal" title="Close">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
        <img id="modal-image" src="" alt="Certificate">
        <div class="modal-info">
            <h3 id="modal-title"></h3>
            <p id="modal-date"></p>
        </div>
    </div>
</div>

<style is:global>
    @keyframes titleGlow {
        0%,
        100% {
            filter: drop-shadow(0 0 20px rgba(240, 147, 251, 0.5));
        }

        50% {
            filter: drop-shadow(0 0 30px rgba(240, 147, 251, 0.8));
        }
    }

    @keyframes float-bg {
        0%,
        100% {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(50px, 50px);
        }
    }

    @keyframes float-bg-reverse {
        0%,
        100% {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(-50px, -50px);
        }
    }

    .floating-bg {
        position: absolute;
        border-radius: 50%;
    }

    .floating-bg-1 {
        top: 10%;
        left: -15%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(59, 130, 246, 0.12) 0%, transparent 70%);
        animation: float-bg 20s ease-in-out infinite;
    }

    .floating-bg-2 {
        bottom: 20%;
        right: -10%;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(217, 70, 239, 0.12) 0%, transparent 70%);
        animation: float-bg-reverse 25s ease-in-out infinite;
    }

    .certificates-title {
        font-size: clamp(2rem, 8vw, 3.5vw);
        background: var(--gradient2);
        background-size: cover;
        color: transparent;
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        filter: drop-shadow(0 0 20px rgba(240, 147, 251, 0.5));
        animation: titleGlow 3s ease-in-out infinite;
    }

    .certificates-subtitle {
        font-size: clamp(0.875rem, 3.5vw, 1.3vw);
        color: var(--secondary);
        background: rgba(26, 15, 62, 0.3);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(59, 130, 246, 0.4);
        border-radius: 25px;
        box-shadow: 0 8px 32px rgba(59, 130, 246, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .certificates-subtitle:hover {
        background: rgba(59, 130, 246, 0.25);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 1px solid rgba(59, 130, 246, 0.6);
        box-shadow: 0 12px 40px rgba(59, 130, 246, 0.6), inset 0 1px 0 rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
    }

    .certificate-controls {
        display: flex;
        flex-direction: column;
        gap: 20px;
        padding: 0 100px;
        margin-top: 40px;
        align-items: center;
    }

    .certificate-search-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        width: 100%;
    }

    .search-input-container {
        position: relative;
        flex: 1;
        max-width: 500px;
        display: flex;
        align-items: center;
    }

    .search-icon {
        position: absolute;
        left: 18px;
        color: var(--hover);
        pointer-events: none;
        stroke-width: 2.5;
        filter: drop-shadow(0 0 5px rgba(16, 185, 129, 0.5));
        z-index: 1;
    }

    .certificate-search {
        width: 100%;
        padding: 15px 20px 15px 50px;
        background: rgba(26, 15, 62, 0.4);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 2px solid rgba(16, 185, 129, 0.3);
        border-radius: 50px;
        color: #ffffff;
        font-size: 16px;
        outline: none;
        transition: all 0.3s ease;
    }

    .certificate-search::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .certificate-search:focus {
        border-color: var(--hover);
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.4);
        background: rgba(26, 15, 62, 0.6);
    }

    .certificate-count {
        padding: 10px 25px;
        background: var(--gradient2);
        border-radius: 50px;
        color: white;
        font-weight: 600;
        font-size: 14px;
        white-space: nowrap;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    }

    .certificate-filters {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .cert-filter-btn {
        padding: 8px 28px;
        background: rgba(26, 15, 62, 0.5);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        color: white;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.4s ease;
        -webkit-tap-highlight-color: transparent;
        touch-action: manipulation;
        user-select: none;
        -webkit-user-select: none;
        position: relative;
        z-index: 1;
    }

    .cert-filter-btn:hover,
    .cert-filter-btn:focus {
        background: rgba(26, 15, 62, 0.6);
        border: 2px solid rgba(255, 107, 53, 0.9);
        outline: none;
    }

    .cert-filter-btn:focus-visible {
        outline: 2px solid rgba(16, 185, 129, 0.8);
        outline-offset: 2px;
    }

    .cert-filter-btn.active {
        background: var(--gradient2);
        border: 2px solid transparent;
        color: white;
    }

    .certificate-boxes {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        justify-content: center;
        padding: 0px 100px 25px;
        column-gap: 25px;
        row-gap: 45px;
        margin-top: 40px;
    }

    .certificates .box {
        background: rgba(26, 15, 62, 0.3);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 20px;
        text-align: center;
        padding: 14px 10px;
        transition: all 0.3s ease;
        box-shadow: 0 8px 32px rgba(16, 185, 129, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
        cursor: pointer;
        min-width: 200px;
        width: fit-content;
    }

    .certificates .box::before {
        content: '';
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        background: linear-gradient(45deg, #10b981, #3b82f6, #8b5cf6, #10b981);
        border-radius: 20px;
        opacity: 0;
        z-index: -1;
        transition: opacity 0.3s ease;
        background-size: 300% 300%;
    }

    .certificates .box:hover::before {
        opacity: 1;
    }

    .certificates .box:hover {
        background: rgba(16, 185, 129, 0.2);
        backdrop-filter: blur(30px);
        -webkit-backdrop-filter: blur(30px);
        border: 1px solid transparent;
        transform: translateY(-8px);
        box-shadow: 0 16px 48px rgba(16, 185, 129, 0.6), inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }

    .certificates .box .cert-image-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        margin-bottom: 12px;
    }

    .certificates .box img {
        width: auto;
        height: 12vw;
        min-width: 180px;
        object-fit: cover;
        -webkit-user-drag: none;
        transition: all 0.4s ease;
        border-radius: 12px;
        display: block;
        margin: 0 auto;
    }

    .certificates .box:hover img {
        transform: scale(1.05);
        filter: brightness(1.1);
    }

    .certificates .box .cert-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(16, 185, 129, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 12px;
    }

    .certificates .box:hover .cert-overlay {
        opacity: 1;
    }

    .cert-overlay-btn {
        padding: 10px 15px;
        background: white;
        color: #10b981;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .cert-overlay-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .certificates .box .cert-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        padding: 5px 12px;
        background: var(--gradient2);
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        color: white;
        text-transform: uppercase;
        box-shadow: 0 4px 10px rgba(16, 185, 129, 0.4);
        z-index: 2;
    }

    .certificates .box .topic {
        width: 180px;
        background: var(--gradient2);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.2vw;
        font-weight: bold;
        margin: 0 auto 5px auto;
    }

    .certificates .box .topic1 {
        width: 180px;
        color: var(--secondary);
        font-size: 1vw;
        font-weight: bold;
        margin: 0 auto 5px auto;
    }

    .cert-load-more-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 40px 0 20px;
    }

    .cert-load-more-btn {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 14px 32px;
        background: rgba(16, 185, 129, 0.15);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 2px solid rgba(16, 185, 129, 0.4);
        border-radius: 50px;
        color: var(--secondary);
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
        position: relative;
        overflow: hidden;
    }

    .cert-load-more-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(16, 185, 129, 0.3), transparent);
        transition: left 0.6s ease;
    }

    .cert-load-more-btn:hover::before {
        left: 100%;
    }

    .cert-load-more-btn:hover {
        background: rgba(16, 185, 129, 0.25);
        border-color: var(--hover);
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 12px 35px rgba(16, 185, 129, 0.5);
    }

    .cert-load-more-btn svg {
        transition: transform 0.3s ease;
    }

    .cert-load-more-btn:hover svg {
        transform: translateY(3px);
    }

    .certificate-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10000;
        display: none;
        align-items: center;
        justify-content: center;
    }

    .certificate-modal.active {
        display: flex;
    }

    .modal-backdrop {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .modal-content {
        position: relative;
        max-width: 90%;
        max-height: 90%;
        background: rgba(26, 15, 62, 0.9);
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0 20px 60px rgba(16, 185, 129, 0.5);
        border: 2px solid var(--hover);
    }

    .modal-close {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 10;
    }

    .modal-close:hover {
        background: rgba(255, 0, 0, 0.8);
        border-color: red;
        transform: rotate(90deg);
    }

    .modal-close svg {
        stroke: white;
    }

    .modal-content img {
        max-width: 100%;
        max-height: 70vh;
        border-radius: 12px;
        display: block;
        margin: 0 auto;
    }

    .modal-info {
        text-align: center;
        margin-top: 20px;
    }

    .modal-info h3 {
        color: var(--secondary);
        font-size: 24px;
        margin-bottom: 10px;
    }

    .modal-info p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 16px;
    }

    /* Tablet (641px to 1023px) */
    @media (min-width: 641px) and (max-width: 1023px) {
        .certificates .text {
            margin-bottom: 3rem;
        }

        .certificate-controls {
            padding: 0 30px;
            margin-top: 35px;
        }

        .certificate-search-wrapper {
            gap: 12px;
        }

        .search-input-container {
            max-width: 400px;
        }

        .certificate-search {
            padding: 13px 18px 13px 48px;
            font-size: 15px;
        }

        .certificate-count {
            padding: 9px 22px;
            font-size: 13.5px;
        }

        .cert-filter-btn {
            padding: 9px 22px;
            font-size: 14px;
        }

        .certificate-boxes {
            padding: 0 30px 22px;
            gap: 35px;
            margin-top: 35px;
        }

        .certificates .box {
            min-width: 220px;
        }

        .certificates .box img {
            height: 21vw;
            min-width: 220px;
        }

        .certificates .box .topic {
            width: 220px;
            font-size: 18px;
        }

        .certificates .box .topic1 {
            width: 220px;
            font-size: 14px;
        }

        .cert-load-more-btn {
            padding: 13px 28px;
            font-size: 15px;
        }
    }

    /* Desktop Small (1024px to 1199px) */
    @media (min-width: 1024px) and (max-width: 1199px) {
        .certificate-controls {
            padding: 0 60px;
        }

        .certificate-boxes {
            padding: 0 60px 25px;
        }

        .certificates .box {
            min-width: 190px;
        }

        .certificates .box img {
