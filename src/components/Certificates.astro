---
import { Image } from 'astro:assets';
import c2025_1 from '../assets/images/certificates/2025/Generative AI Leader (Oct,2025).jpg';
import c2025_2 from '../assets/images/certificates/2025/SWOC Project Admin (Mar,2025).jpg';
import c2025_3 from '../assets/images/certificates/2025/IWOC Project Maintainer (Mar,2025).jpg';

import c2024_1 from '../assets/images/certificates/2024/KWOC Project Mentor (Dec,2024).jpg';
import c2024_2 from '../assets/images/certificates/2024/GSSOC Project Admin (Aug,2024).jpg';
import c2024_3 from '../assets/images/certificates/2024/JWOC Project Mentor (Mar,2024).jpg';

