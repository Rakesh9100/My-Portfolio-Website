---
import { Image } from "astro:assets";
import profileImg from "../assets/images/profile.png";
---

<section class="about z-[3] min-h-screen relative py-24 px-5 overflow-hidden" id="about" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);">
    <!-- Floating Background Elements -->
    <div class="absolute -top-1/2 -right-[10%] w-[500px] h-[500px] rounded-full pointer-events-none animate-float-bg" style="background: radial-gradient(circle, rgba(217, 70, 239, 0.15) 0%, transparent 70%);"></div>
    <div class="absolute -bottom-[30%] -left-[10%] w-[400px] h-[400px] rounded-full pointer-events-none animate-float-bg-reverse" style="background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%);"></div>

    <div class="title relative text-center font-bold mb-8 md:mb-12 lg:mb-16">
        <span class="text-[8vw] sm:text-[6vw] md:text-[5vw] lg:text-[3.5vw] uppercase" style="background: var(--gradient2); background-size: cover; color: transparent; background-clip: text; -webkit-background-clip: text; filter: drop-shadow(0 0 20px rgba(240, 147, 251, 0.5)); animation: titleGlow 3s ease-in-out infinite;">About Me</span>
    </div>

    <div class="max-width max-w-full px-4 sm:px-6 md:px-10 lg:px-20 mx-auto">
        <div class="about-content flex flex-col lg:flex-row flex-wrap items-center lg:items-start justify-between gap-8 lg:gap-0">

            <!-- Left Column - Profile Image -->
            <div class="column left w-full sm:w-[70%] md:w-[50%] lg:w-[25%] about-image-animate opacity-0" data-tilt>
                <div class="profile-card relative rounded-[20px] overflow-hidden p-[5px] transition-all duration-500" style="background: rgba(26, 15, 62, 0.3); backdrop-filter: blur(25px); -webkit-backdrop-filter: blur(25px);">
                    <div class="profile-border absolute inset-[5px] rounded-[16px] z-[1]" style="background: rgba(26, 15, 62, 0.8); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);"></div>
                    <Image src={profileImg} alt="Profile Photo" width={334} height={334} draggable="false" class="h-auto w-full object-cover relative z-[2] block transition-all duration-400 rounded-[16px]" style="filter: grayscale(1); animation: transition 1.4s linear infinite;" />
                </div>
            </div>

            <!-- Right Column - Content -->
            <div class="column right w-full lg:w-[55%] text-white">
                <div class="topic about-text-animate opacity-0 mb-2" data-delay="0">
                    <b><span class="text-[20px] sm:text-[22px] md:text-[24px] lg:text-[25px] font-bold gradient-text">Hello there...!! Welcome to My Portfolio.</span></b>
                </div>
                <div class="topic about-text-animate opacity-0 mb-4 md:mb-6" data-delay="0.1">
                    <b><span class="text-[20px] sm:text-[22px] md:text-[24px] lg:text-[25px] font-bold gradient-text">My name is Rakesh Roshan.</span></b>
                </div>

                <!-- Achievement Stats Cards -->
                <div class="info-cards grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 lg:gap-5 my-4 md:my-6">
                    <div class="stat-box-mini about-stat-animate opacity-0" data-delay="0.3">
                        <div class="stat-icon-mini">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" class="sm:w-[32px] sm:h-[32px] lg:w-[35px] lg:h-[35px]">
                                <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                            </svg>
                        </div>
                        <div class="stat-content flex flex-col items-start">
                            <div class="stat-number-mini" data-target="2">2</div>
                            <div class="stat-label-mini">Years Experience</div>
                        </div>
                    </div>

                    <div class="stat-box-mini about-stat-animate opacity-0" data-delay="0.4">
                        <div class="stat-icon-mini">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" class="sm:w-[32px] sm:h-[32px] lg:w-[35px] lg:h-[35px]">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                            </svg>
                        </div>
                        <div class="stat-content flex flex-col items-start">
                            <div class="flex items-baseline">
                                <span class="stat-number-mini" data-target="25">25</span><span class="stat-plus-mini">+</span>
                            </div>
                            <div class="stat-label-mini">Certificates</div>
                        </div>
                    </div>

                    <div class="stat-box-mini about-stat-animate opacity-0" data-delay="0.5">
                        <div class="stat-icon-mini">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" class="sm:w-[32px] sm:h-[32px] lg:w-[35px] lg:h-[35px]">
                                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                            </svg>
                        </div>
                        <div class="stat-content flex flex-col items-start">
                            <div class="flex items-baseline">
                                <span class="stat-number-mini" data-target="100">100</span><span class="stat-plus-mini">+</span>
                            </div>
                            <div class="stat-label-mini">GitHub Stars</div>
                        </div>
                    </div>
                </div>

                <p class="about-text-animate opacity-0 text-justify text-sm sm:text-base font-medium leading-relaxed mt-4 md:mt-5 text-white/90 font-lato" data-delay="0.2">
                    I'm currently working as a <span class="highlight font-bold px-1">DevOps Engineer at OpenText</span>. I completed my <span class="highlight font-bold px-1">B.Tech in Computer Science and Engineering from LPU</span> and I'm based in <span class="highlight font-bold px-1">Bokaro Steel City, Jharkhand</span>.
                </p>
                <p class="about-text-animate opacity-0 text-justify text-sm sm:text-base font-medium leading-relaxed mt-4 md:mt-5 text-white/90 font-lato" data-delay="0.25">
                    I have strong expertise in cloud platforms like <span class="highlight font-bold px-1">AWS</span> and <span class="highlight font-bold px-1">GCP</span>, with a focus on DevOps tools such as <span class="highlight font-bold px-1">Ansible</span> and <span class="highlight font-bold px-1">CI/CD pipelines</span>. I'm hands-on with <span class="highlight font-bold px-1">Linux</span>, <span class="highlight font-bold px-1">Docker</span>, and <span class="highlight font-bold px-1">Kubernetes</span>.
                </p>
                <p class="about-text-animate opacity-0 text-justify text-sm sm:text-base font-medium leading-relaxed mt-4 md:mt-5 text-white/90 font-lato" data-delay="0.3">
                    Beyond work, I enjoy playing badminton üè∏ and listening to devotional and Bollywood music üéµ. My short-term goal is to enhance my cloud skills and contribute to my organization. Long-term, I aim to excel in DevOps and make a meaningful impact in a leading company.
                </p>

                <div class="social-connect mt-6 md:mt-8 lg:mt-10">
                    <h3 class="about-text-animate opacity-0 text-[18px] sm:text-[20px] lg:text-[22px] font-bold mb-4 md:mb-5 inline-block gradient-text" data-delay="0.6">Let's Connect</h3>
                    <div class="media-icons about-social-animate opacity-0 flex gap-3 sm:gap-4 lg:gap-5 flex-wrap justify-center lg:justify-start" data-delay="0.8">
                        <!-- Bio Link -->
                        <a href="https://rakesh9100.bio.link/" target="_blank" rel="noopener noreferrer" draggable="false" class="social-icon-wrapper">
                        <img src="/assets/images/about/all-links.svg" alt="Bio Link" draggable="false" class="social-icon-img" />
                        </a>

                        <!-- LinkedIn -->
                        <a href="https://www.linkedin.com/in/rakesh-roshan-9100/" target="_blank" rel="noopener noreferrer" draggable="false" class="social-icon-wrapper">
                        <img src="/assets/images/about/linkedin.svg" alt="LinkedIn" draggable="false" class="social-icon-img" />
                        </a>

                        <!-- GitHub -->
                        <a href="https://github.com/Rakesh9100" target="_blank" rel="noopener noreferrer" draggable="false" class="social-icon-wrapper">
                        <img src="/assets/images/about/github.svg" alt="GitHub" draggable="false" class="social-icon-img" />
                        </a>

                        <!-- Gmail -->
                        <a href="mailto:roshanrakesh7362@gmail.com" target="_blank" rel="noopener noreferrer" draggable="false" class="social-icon-wrapper">
                        <img src="/assets/images/about/gmail.svg" alt="Gmail" draggable="false" class="social-icon-img" />
                        </a>

                        <!-- Facebook -->
                        <a href="https://www.facebook.com/rakesh6203/" target="_blank" rel="noopener noreferrer" draggable="false" class="social-icon-wrapper">
                        <img src="/assets/images/about/facebook.svg" alt="Facebook" draggable="false" class="social-icon-img" />
                        </a>

                        <!-- Instagram -->
                        <a href="https://www.instagram.com/rakesh250602/" target="_blank" rel="noopener noreferrer" draggable="false" class="social-icon-wrapper">
                        <img src="/assets/images/about/instagram.svg" alt="Instagram" draggable="false" class="social-icon-img" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .stat-box-mini {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        border-radius: 15px;
        position: relative;
        overflow: hidden;
        transition: all 0.4s ease;
        background: rgba(26, 15, 62, 0.4);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 2px solid rgba(16, 185, 129, 0.3);
        box-shadow: 0 5px 20px rgba(16, 185, 129, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .stat-icon-mini {
        width: 45px;
        height: 45px;
        min-width: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        flex-shrink: 0;
        transition: transform 0.4s ease;
        background: var(--gradient2);
        box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
    }

    .stat-number-mini {
        font-size: 1.75rem;
        font-weight: 900;
        line-height: 1;
        display: inline-block;
        background: var(--gradient2);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-plus-mini {
        font-size: 1.5rem;
        font-weight: 900;
        line-height: 1;
        display: inline-block;
        margin-left: 0.125rem;
        background: var(--gradient2);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-label-mini {
        font-size: 0.625rem;
        font-weight: 600;
        margin-top: 0.25rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--secondary);
    }

    .social-icon-wrapper {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        background: rgba(26, 15, 62, 0.6);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 3px solid rgba(59, 130, 246, 0.6);
        box-shadow: 0 8px 32px rgba(59, 130, 246, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.15);
