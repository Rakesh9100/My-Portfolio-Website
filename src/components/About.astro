<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.1/vanilla-tilt.min.js"></script>
<script>
  // Vanilla Tilt
  const tiltElements = document.querySelectorAll('[data-tilt]');
  if (tiltElements.length > 0 && typeof VanillaTilt !== 'undefined') {
    VanillaTilt.init(tiltElements, {
      max: 15,
      speed: 400,
      glare: true,
      'max-glare': 0.3,
    });
  }
  
  // Counter animation
  const animateCounter = (counter: Element) => {
    const target = parseInt(counter.getAttribute('data-target') || '0');
    let count = 0;
    const speed = 200;
    const increment = target / speed;
    
    const updateCount = () => {
      count += increment;
      if (count < target) {
        counter.textContent = Math.ceil(count).toString();
        requestAnimationFrame(updateCount);
      } else {
        counter.textContent = target.toString();
      }
    };
    updateCount();
  };
  
  // Intersection Observer for animations
  const observerOptions = { threshold: 0.2, rootMargin: '0px' };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        // Animate image
        const imageAnimate = entry.target.querySelector('.about-image-animate');
        if (imageAnimate) imageAnimate.classList.add('animate-in');
        
        // Animate text elements
        const textAnimates = entry.target.querySelectorAll('.about-text-animate');
        textAnimates.forEach((el, index) => {
          setTimeout(() => el.classList.add('animate-in'), index * 100);
        });
        
        // Animate stats
        const statAnimates = entry.target.querySelectorAll('.about-stat-animate');
        statAnimates.forEach((el, index) => {
          setTimeout(() => {
            el.classList.add('animate-in');
            const counter = el.querySelector('.stat-number-mini');
            if (counter) animateCounter(counter);
          }, 300 + index * 100);
        });
        
        // Animate social
        const socialAnimate = entry.target.querySelector('.about-social-animate');
        if (socialAnimate) {
          setTimeout(() => socialAnimate.classList.add('animate-in'), 800);
        }
        
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);
  
  const aboutSection = document.querySelector('.about');
  if (aboutSection) observer.observe(aboutSection);
  
  // Social icon hover
  const socialIcons = document.querySelectorAll('.social-icon-wrapper');
  socialIcons.forEach(icon => {
    icon.addEventListener('mouseenter', () => {
      icon.style.background = 'rgba(59, 130, 246, 0.4)';
      icon.style.backdropFilter = 'blur(30px)';
      icon.style.border = '3px solid rgba(59, 130, 246, 0.9)';
      icon.style.transform = 'scale(1.15) rotate(5deg)';
      icon.style.boxShadow = '0 15px 50px rgba(59, 130, 246, 0.8), inset 0 1px 0 rgba(255, 255, 255, 0.3)';
    });
    
    icon.addEventListener('mouseleave', () => {
      icon.style.background = 'rgba(26, 15, 62, 0.6)';
      icon.style.backdropFilter = 'blur(25px)';
      icon.style.border = '3px solid rgba(59, 130, 246, 0.6)';
      icon.style.transform = 'scale(1) rotate(0deg)';
      icon.style.boxShadow = '0 8px 32px rgba(59, 130, 246, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.15)';
    });
  });
  
  // Stat box hover
  const statBoxes = document.querySelectorAll('.stat-box-mini');
  statBoxes.forEach(box => {
    box.addEventListener('mouseenter', () => {
      box.style.borderColor = 'transparent';
      box.style.transform = 'translateY(-8px) scale(1.05)';
      box.style.boxShadow = '0 10px 30px rgba(16, 185, 129, 0.5)';
      const icon = box.querySelector('.stat-icon-mini');
      if (icon) (icon as HTMLElement).style.transform = 'scale(1.1)';
    });
    
    box.addEventListener('mouseleave', () => {
      box.style.borderColor = 'rgba(16, 185, 129, 0.3)';
      box.style.transform = 'translateY(0) scale(1)';
      box.style.boxShadow = '0 5px 20px rgba(16, 185, 129, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1)';
      const icon = box.querySelector('.stat-icon-mini');
      if (icon) (icon as HTMLElement).style.transform = 'scale(1)';
    });
  });
</script>

