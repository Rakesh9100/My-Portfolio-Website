<script>
    // Custom tilt effect using CSS transforms
    function initCustomTilt() {
        const tiltElements = document.querySelectorAll('[data-tilt]');

        tiltElements.forEach(element => {
            (element as HTMLElement).addEventListener('mousemove', (e: MouseEvent) => {
                const htmlElement = element as HTMLElement;
                const rect = htmlElement.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;

                const centerX = rect.width / 2;
                const centerY = rect.height / 2;

                const rotateX = (y - centerY) / centerY * -10;
                const rotateY = (x - centerX) / centerX * 10;

                htmlElement.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.05, 1.05, 1.05)`;
                htmlElement.style.transition = 'none';
            });

            element.addEventListener('mouseleave', () => {
                const htmlElement = element as HTMLElement;
                htmlElement.style.transform = 'perspective(1000px) rotateX(0deg) rotateY(0deg) scale3d(1, 1, 1)';
                htmlElement.style.transition = 'transform 0.3s ease-out';
            });
        });
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initCustomTilt);
    } else {
        initCustomTilt();
    }

    // Counter animation
    const animateCounter = (counter: Element) => {
        const target = parseInt(counter.getAttribute('data-target') || '0');
        let count = 0;
        const speed = 200;
        const increment = target / speed;

        const updateCount = () => {
            count += increment;
            if (count < target) {
                counter.textContent = Math.ceil(count).toString();
                requestAnimationFrame(updateCount);
            } else {
                counter.textContent = target.toString();
            }
        };
        updateCount();
    };

    // Intersection Observer for animations
    const observerOptions = {
        threshold: 0.2,
        rootMargin: '0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                // Animate image
                const imageAnimate = entry.target.querySelector('.about-image-animate');
                if (imageAnimate) imageAnimate.classList.add('animate-in');

                // Animate text elements
                const textAnimates = entry.target.querySelectorAll('.about-text-animate');
                textAnimates.forEach((el, index) => {
                    setTimeout(() => el.classList.add('animate-in'), index * 100);
                });

                // Animate stats
                const statAnimates = entry.target.querySelectorAll('.about-stat-animate');
                statAnimates.forEach((el, index) => {
                    setTimeout(() => {
                        el.classList.add('animate-in');
                        const counter = el.querySelector('.stat-number-mini');
                        if (counter) animateCounter(counter);
                    }, 300 + index * 100);
                });

                // Animate social
                const socialAnimate = entry.target.querySelector('.about-social-animate');
                if (socialAnimate) {
                    setTimeout(() => socialAnimate.classList.add('animate-in'), 800);
                }

                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    const aboutSection = document.querySelector('.about');
    if (aboutSection) observer.observe(aboutSection);

    // Social icon hover
    const socialIcons = document.querySelectorAll('.social-icon-wrapper');
    socialIcons.forEach(icon => {
        icon.addEventListener('mouseenter', () => {
            (icon as HTMLElement).style.background = 'rgba(59, 130, 246, 0.4)';
            (icon as HTMLElement).style.backdropFilter = 'blur(30px)';
            (icon as HTMLElement).style.border = '3px solid rgba(59, 130, 246, 0.9)';
            (icon as HTMLElement).style.transform = 'scale(1.15) rotate(5deg)';
            (icon as HTMLElement).style.boxShadow = '0 15px 50px rgba(59, 130, 246, 0.8), inset 0 1px 0 rgba(255, 255, 255, 0.3)';
        });

        icon.addEventListener('mouseleave', () => {
            (icon as HTMLElement).style.background = 'rgba(26, 15, 62, 0.6)';
            (icon as HTMLElement).style.backdropFilter = 'blur(25px)';
            (icon as HTMLElement).style.border = '3px solid rgba(59, 130, 246, 0.6)';
            (icon as HTMLElement).style.transform = 'scale(1) rotate(0deg)';
            (icon as HTMLElement).style.boxShadow = '0 8px 32px rgba(59, 130, 246, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.15)';
        });
    });

    // Stat box hover
    const statBoxes = document.querySelectorAll('.stat-box-mini');
    statBoxes.forEach(box => {
        box.addEventListener('mouseenter', () => {
            (box as HTMLElement).style.borderColor = 'transparent';
            (box as HTMLElement).style.transform = 'translateY(-8px) scale(1.05)';
            (box as HTMLElement).style.boxShadow = '0 10px 30px rgba(16, 185, 129, 0.5)';
            const icon = box.querySelector('.stat-icon-mini');
            if (icon)(icon as HTMLElement).style.transform = 'scale(1.1)';
        });

        box.addEventListener('mouseleave', () => {
            (box as HTMLElement).style.borderColor = 'rgba(16, 185, 129, 0.3)';
            (box as HTMLElement).style.transform = 'translateY(0) scale(1)';
            (box as HTMLElement).style.boxShadow = '0 5px 20px rgba(16, 185, 129, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1)';
            const icon = box.querySelector('.stat-icon-mini');
            if (icon)(icon as HTMLElement).style.transform = 'scale(1)';
        });
    });
</script>