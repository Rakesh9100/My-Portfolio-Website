---
import { Image } from "astro:assets";
import profileImg from "../assets/images/profile.png";
---

<section class="about section-common section-bg-primary" id="about">
    <div class="title relative text-center font-bold mb-4 md:mb-6">
        <span class="section-title text-[8vw] sm:text-[6vw] md:text-[5vw] lg:text-[3.5vw] uppercase">About Me</span>
    </div>

    <div class="text text-center mb-8 md:mb-12 lg:mb-16 px-4">
        <span class="quote-text">Behind every line of code is a story of curiosity, creativity, and continuous learning.</span>
    </div>

    <div class="max-width max-w-full px-4 sm:px-6 md:px-10 lg:px-20 mx-auto">
        <div class="about-content flex flex-col lg:flex-row flex-wrap items-center lg:items-start justify-between gap-8 lg:gap-0">

            <!-- Left Column -->
            <div class="column left w-full sm:w-[70%] md:w-[45%] lg:w-[30%] about-image flex justify-center lg:justify-start">
                <div class="profile-card">
                    <Image src={profileImg} alt="Profile Photo" width={334} height={334} class="profile-img"/>
                </div>
            </div>

            <!-- Right Column -->
            <div class="column right w-full lg:w-[60%] text-white">
                <div class="topic about-text-animate opacity-0 mb-2 text-center" data-delay="0">
                    <span class="text-[20px] sm:text-[22px] md:text-[24px] lg:text-[25px] font-bold about-gradient-text">DevOps Engineer focused on cloud-native infrastructure and automation</span>
                </div>

                <!-- Achievement Stats Cards -->
                <div class="info-cards grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-3 sm:gap-4 lg:gap-4 xl:gap-5 my-4 md:my-6 max-w-full overflow-hidden">
                    <div class="stat-box-mini about-stat-animate opacity-0 w-full" data-delay="0.3">
                        <div class="stat-icon-mini">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" class="sm:w-[30px] sm:h-[30px]">
                                <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                            </svg>
                        </div>
                        <div class="stat-content flex flex-col items-start">
                            <div class="stat-number-mini" data-target="2">2</div>
                            <div class="stat-label-mini">Years Experience</div>
                        </div>
                    </div>


                    <div class="stat-box-mini about-stat-animate opacity-0 w-full" data-delay="0.5">
                        <div class="stat-icon-mini">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" class="sm:w-[30px] sm:h-[30px]">
                                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                            </svg>
                        </div>
                        <div class="stat-content flex flex-col items-start">
                            <div class="flex items-baseline">
                                <span class="stat-number-mini" data-target="400">400</span><span class="stat-plus-mini">+</span>
                            </div>
                            <div class="stat-label-mini">GitHub Stars</div>
                        </div>
                    </div>
                </div>

                <p class="about-text-animate opacity-0 text-justify text-sm sm:text-base font-medium leading-relaxed mt-4 md:mt-5 text-white/90" data-delay="0.2">
                    I am a <span class="highlight font-bold px-1">DevOps Engineer at OpenText</span>, working on cloud-native deployment and automation for enterprise Documentum applications.
                </p>
                <p class="about-text-animate opacity-0 text-justify text-sm sm:text-base font-medium leading-relaxed mt-4 md:mt-5 text-white/90" data-delay="0.25">
                    My work focuses on Kubernetes and Helm based deployments, <span class="highlight font-bold px-1">CI/CD pipelines</span>, and deployment automation using tools like <span class="highlight font-bold px-1">Ansible</span>, Docker and Linux across cloud environments including <span class="highlight font-bold px-1">AWS</span> and <span class="highlight font-bold px-1">GCP</span>.
                </p>
                <p class="about-text-animate opacity-0 text-justify text-sm sm:text-base font-medium leading-relaxed mt-4 md:mt-5 text-white/90" data-delay="0.3">
                    Outside of work, I enjoy badminton üè∏ and devotional music üéµ. I am driven by continuous learning and aim to build reliable systems that scale with business needs.
                </p>

                <div class="social-connect mt-6 md:mt-8 lg:mt-10">
                    <h3 class="about-text-animate opacity-0 text-[18px] sm:text-[20px] lg:text-[22px] font-bold mb-4 md:mb-5 inline-block about-gradient-text text-center lg:text-left w-full lg:w-auto" data-delay="0.6">Let's Connect</h3>
                    <div class="media-icons about-social-animate opacity-0 flex gap-3 sm:gap-4 lg:gap-5 flex-wrap justify-center lg:justify-start" data-delay="0.8">
                        <!-- Bio Link -->
                        <a href="https://rakesh9100.bio.link/" target="_blank" rel="noopener noreferrer" class="social-icon-wrapper">
                            <img src="/assets/images/about/all-links.svg" alt="Bio Link" class="social-icon-img" />
                        </a>

                        <!-- LinkedIn -->
                        <a href="https://www.linkedin.com/in/rakesh-roshan-9100/" target="_blank" rel="noopener noreferrer" class="social-icon-wrapper">
                            <img src="/assets/images/about/linkedin.svg" alt="LinkedIn" class="social-icon-img" />
                        </a>

                        <!-- GitHub -->
                        <a href="https://github.com/Rakesh9100" target="_blank" rel="noopener noreferrer" class="social-icon-wrapper">
                            <img src="/assets/images/about/github.svg" alt="GitHub" class="social-icon-img" />
                        </a>

                        <!-- Gmail -->
                        <a href="mailto:roshanrakesh7362@gmail.com" target="_blank" rel="noopener noreferrer" class="social-icon-wrapper">
                            <img src="/assets/images/about/gmail.svg" alt="Gmail" class="social-icon-img" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .profile-img,
    .social-icon-wrapper,
    .social-icon-wrapper img {
        user-select: none;
        -webkit-user-drag: none;
    }

    .profile-card {
        padding: 4px;
        border-radius: 20px;
        border: 3px solid transparent;
        background: linear-gradient(rgba(18, 18, 42, 1), rgba(18, 18, 42, 1)) padding-box, var(--gradient1) border-box;
    }

    .profile-card:hover .profile-img {
        filter: grayscale(0);
        transform: scale(1.02);
    }

    .profile-img {
        border-radius: 16px;
        filter: grayscale(1);
        transition: transform 0.4s ease, filter 0.4s ease;
    }

    @keyframes textSlideIn {
        0% {
            opacity: 0;
            transform: translateX(-50px);
        }
        100% {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .about-text-animate.animate-in {
        animation: textSlideIn 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    }

    @keyframes statSlideUp {
        0% {
            opacity: 0;
            transform: translateY(30px) scale(0.9);
        }

        60% {
            opacity: 1;
            transform: translateY(-5px) scale(1.02);
        }

        100% {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .about-stat-animate.animate-in {
        animation: statSlideUp 0.7s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    }

    .stat-box-mini {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        border-radius: 15px;
        position: relative;
        overflow: hidden;
        transition: border-color 0.3s ease;
        background: rgba(0, 0, 0, 0.4);
        border: 2px solid var(--hover);
        width: 100%;
        min-width: 0;
        box-sizing: border-box;
    }

    .stat-box-mini:hover {
        border-color: var(--secondary);
    }

    .stat-icon-mini {
        width: 45px;
        height: 45px;
        min-width: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        flex-shrink: 0;
        transition: transform 0.4s ease;
        background: var(--gradient1);
    }

    .stat-number-mini {
        font-size: 1.75rem;
        font-weight: 900;
        line-height: 1;
        display: inline-block;
        background: var(--gradient1);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-plus-mini {
        font-size: 1.6rem;
        font-weight: 900;
        line-height: 1;
        display: inline-block;
        margin-left: 0.125rem;
        background: var(--gradient1);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-label-mini {
        font-size: 0.8rem;
        word-break: break-all;
        font-weight: 600;
        margin-top: 0.25rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .social-icon-wrapper {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        background: rgba(0, 0, 0, 0.6);
        border: 3px solid var(--ternary);
        transition: transform 0.3s ease, border-color 0.3s ease;
    }

    .social-icon-wrapper:hover {
        transform: scale(1.1);
        border-color: var(--primary);
    }

    .social-icon-img {
        width: 50px;
        height: 50px;
    }

    .about-gradient-text {
        background: var(--gradient1);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        filter: drop-shadow(0 0 10px rgba(217, 70, 239, 0.3));
    }

    .highlight {
        background: var(--gradient2);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    @keyframes socialFadeIn {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }

    .about-social-animate.animate-in {
        animation: socialFadeIn 0.8s ease forwards;
    }

    @keyframes socialIconPop {
        0% {
            opacity: 0;
            transform: translateY(20px) scale(0.8);
        }

        60% {
            opacity: 1;
            transform: translateY(-5px) scale(1.05);
        }

        100% {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .about-social-animate.animate-in .social-icon-wrapper {
        opacity: 0;
        transform: translateY(20px) scale(0.8);
        animation: socialIconPop 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    }

    .about-social-animate.animate-in .social-icon-wrapper:nth-child(1) {
        animation-delay: 0.1s;
    }

    .about-social-animate.animate-in .social-icon-wrapper:nth-child(2) {
        animation-delay: 0.2s;
    }

    .about-social-animate.animate-in .social-icon-wrapper:nth-child(3) {
        animation-delay: 0.3s;
    }

    .about-social-animate.animate-in .social-icon-wrapper:nth-child(4) {
        animation-delay: 0.4s;
    }

    @media (max-width: 768px) {
        .about {
            padding-top: 4rem;
            padding-bottom: 4rem;
        }

        .info-cards {
            gap: 0.5rem;
        }
    }

    @media (max-width: 640px) {
        .about {
            padding-top: 3.5rem;
            padding-bottom: 3.5rem;
        }

        .column.left {
            width: 85%;
            max-width: 300px;
        }
    }
</style>

<script>
    // Counter animation
    const animateCounter = (counter: Element) => {
        const target = parseInt(counter.getAttribute('data-target') || '0');
        let count = 0;
        const speed = 50;
        const increment = target / speed;

        const updateCount = () => {
            count += increment;
            if (count < target) {
                counter.textContent = Math.ceil(count).toString();
                requestAnimationFrame(updateCount);
            } else {
                counter.textContent = target.toString();
            }
        };
        updateCount();
    };

    // Intersection Observer for animations
    const observerOptions = {
        threshold: 0.2,
        rootMargin: '0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                // Animate image
                const imageAnimate = entry.target.querySelector('.about-image-animate');
                if (imageAnimate) imageAnimate.classList.add('animate-in');

                // Animate text elements
                const textAnimates = entry.target.querySelectorAll('.about-text-animate');
                textAnimates.forEach((el, index) => {
                    setTimeout(() => el.classList.add('animate-in'), index * 100);
                });

                // Animate stats
                const statAnimates = entry.target.querySelectorAll('.about-stat-animate');
                statAnimates.forEach((el, index) => {
                    setTimeout(() => {
                        el.classList.add('animate-in');
                        const counter = el.querySelector('.stat-number-mini');
                        if (counter) animateCounter(counter);
                    }, 300 + index * 100);
                });

                // Animate social
                const socialAnimate = entry.target.querySelector('.about-social-animate');
                if (socialAnimate) {
                    setTimeout(() => socialAnimate.classList.add('animate-in'), 800);
                }

                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    const aboutSection = document.querySelector('.about');
    if (aboutSection) observer.observe(aboutSection);
</script>