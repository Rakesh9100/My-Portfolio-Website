        -webkit-text-fill-color: transparent;
    }

    .font-lato {
        font-family: 'Lato', sans-serif;
    }

    @keyframes titleGlow {
        0%,
        100% {
            filter: drop-shadow(0 0 20px rgba(240, 147, 251, 0.5));
        }

        50% {
            filter: drop-shadow(0 0 30px rgba(240, 147, 251, 0.8));
        }
    }

    @keyframes float-bg {
        0%,
        100% {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(50px, 50px);
        }
    }

    @keyframes float-bg-reverse {
        0%,
        100% {
            transform: translate(0, 0);
        }

        50% {
            transform: translate(-50px, -50px);
        }
    }

    @keyframes transition {
        20% {
            filter: grayscale(1) drop-shadow(5px 5px 25px rgb(238, 255, 0));
        }

        40% {
            filter: grayscale(1) drop-shadow(5px 5px 25px rgb(0, 119, 255));
        }

        60% {
            filter: grayscale(1) drop-shadow(5px 5px 25px rgb(0, 255, 17));
        }

        80% {
            filter: grayscale(1) drop-shadow(5px 5px 25px rgb(255, 0, 132));
        }

        100% {
            filter: grayscale(1) drop-shadow(5px 5px 25px rgb(0, 255, 251));
        }
    }

    .animate-float-bg {
        animation: float-bg 15s ease-in-out infinite;
    }

    .animate-float-bg-reverse {
        animation: float-bg-reverse 20s ease-in-out infinite;
    }

    .profile-card::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: conic-gradient(transparent, transparent, transparent, var(--primary));
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 0;
        pointer-events: none;
        animation: rotateBorder 4s linear infinite;
    }

    .profile-card:hover::before {
        opacity: 1;
    }

    @keyframes rotateBorder {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .profile-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 60px var(--primary), 0 0 100px var(--primary);
        animation: pulseGlow 2s ease-in-out infinite;
    }

    @keyframes pulseGlow {
        0%,
        100% {
            box-shadow: 0 20px 60px var(--primary), 0 0 80px var(--primary);
        }

        50% {
            box-shadow: 0 25px 70px var(--primary), 0 0 120px var(--primary);
        }
    }

